---
import { Icon } from 'astro-icon/components';

interface Props {
  label: string;
  placeholder?: string;
  icon?: string;
}

const { label, placeholder = '', icon = 'lucide:terminal' } = Astro.props;
---

<div class="flex flex-col gap-2">
  <label class="text-xs font-medium text-text-secondary font-mono">{label}</label>
  <div class="flex items-center gap-2 rounded bg-bg-input border border-border-primary px-3.5 py-2.5">
    <Icon name={icon} class="size-3.5 text-text-muted" />
    <input
      type="text"
      placeholder={placeholder}
      class="w-full bg-transparent text-[13px] text-text-primary placeholder:text-text-muted font-mono outline-none"
    />
  </div>
</div>
