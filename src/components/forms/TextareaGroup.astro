---
interface Props {
  label: string;
  placeholder?: string;
}

const { label, placeholder = '// type your message here...' } = Astro.props;
---

<div class="flex flex-col gap-2">
  <label class="text-xs font-medium text-text-secondary font-mono">{label}</label>
  <textarea
    placeholder={placeholder}
    class="h-30 w-full rounded bg-bg-input border border-border-primary p-3.5 text-[13px] text-text-primary placeholder:text-text-muted font-mono outline-none resize-none"
  ></textarea>
</div>
