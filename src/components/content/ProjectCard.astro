---
import Tag from '../ui/Tag.astro';

interface Props {
  title: string;
  description: string;
  stars?: number;
  link?: string;
  tags?: string[];
}

const { title, description, stars = 0, link = '#', tags = [] } = Astro.props;

const formatStars = (n: number): string => {
  if (n >= 1000) return `${(n / 1000).toFixed(1)}k`;
  return String(n);
};
---

<div class="flex flex-col overflow-hidden rounded bg-bg-surface border border-border-primary transition-all duration-300 hover:-translate-y-1 hover:border-green-primary/20 hover:shadow-lg hover:shadow-green-primary/5">
  <!-- Image slot -->
  <div class="h-[180px] w-full bg-bg-input">
    <slot name="image" />
  </div>
  <!-- Body -->
  <div class="flex flex-col gap-3 p-5">
    <h3 class="text-base font-semibold text-text-primary font-mono">{title}</h3>
    <p class="text-xs leading-relaxed text-text-tertiary font-mono">{description}</p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <Tag label={tag} />
        ))}
      </div>
    )}
    <div class="flex items-center justify-between">
      {stars > 0 && <span class="text-[11px] text-green-primary font-mono">★ {formatStars(stars)}</span>}
      <a href={link} class="text-[11px] font-medium text-text-tertiary font-mono hover:text-text-secondary transition">
        view_repo →
      </a>
    </div>
  </div>
</div>
