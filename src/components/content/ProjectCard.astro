---
import { Picture } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import Tag from '../ui/Tag.astro';
import { formatStars } from '../../utils/blog';

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  imageAlt: string;
  stars?: number;
  link?: string;
  tags?: string[];
}

const { title, description, image, imageAlt, stars = 0, link = '#', tags = [] } = Astro.props;
---

<div class="flex h-full flex-col overflow-hidden rounded bg-bg-surface border border-border-primary transition-all duration-300 hover:-translate-y-1 hover:border-green-primary/20 hover:shadow-lg hover:shadow-green-primary/5">
  <!-- Image area -->
  <div class="h-[180px] w-full overflow-hidden bg-bg-input">
    <Picture
      src={image}
      formats={['avif', 'webp']}
      widths={[400, 800]}
      sizes="(max-width: 768px) 100vw, 50vw"
      alt={imageAlt}
      class="h-full w-full object-cover"
      loading="lazy"
      decoding="async"
    />
  </div>
  <!-- Body -->
  <div class="flex flex-1 flex-col gap-3 p-5">
    <h3 class="text-base font-semibold text-text-primary font-mono">{title}</h3>
    <p class="text-xs leading-relaxed text-text-tertiary font-mono">{description}</p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <Tag label={tag} />
        ))}
      </div>
    )}
    <div class="mt-auto flex items-center justify-between">
      {stars > 0 && <span class="text-[11px] text-green-primary font-mono">★ {formatStars(stars)}</span>}
      <a href={link} class="text-[11px] font-medium text-text-tertiary font-mono hover:text-text-secondary transition">
        view_repo →
      </a>
    </div>
  </div>
</div>
