---
interface Props {
  cells: string[];
  status?: string;
}

const { cells, status = 'active' } = Astro.props;
---

<div class="flex items-center border-b border-border-primary px-0 py-3">
  {cells.map((cell, i) => (
    <div class="flex-1">
      <span class:list={[
        'text-xs font-mono',
        i === 0 ? 'text-text-primary' : 'text-text-secondary',
      ]}>
        {cell}
      </span>
    </div>
  ))}
  <div class="w-30">
    <span class="text-xs font-medium text-green-primary font-mono">{status}</span>
  </div>
</div>
