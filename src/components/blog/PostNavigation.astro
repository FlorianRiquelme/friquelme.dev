---
import Divider from '../ui/Divider.astro';

interface PostLink {
  id: string;
  title: string;
}

interface Props {
  prevPost?: PostLink;
  nextPost?: PostLink;
}

const { prevPost, nextPost } = Astro.props;
---

{(prevPost || nextPost) && (
  <div class="flex flex-col gap-6 mt-12">
    <Divider />
    <div class="flex justify-between gap-8">
      {prevPost ? (
        <a href={`/blog/${prevPost.id}`} class="flex flex-col gap-1 group">
          <span class="text-xs text-text-muted font-mono">&lt; previous post</span>
          <span class="text-sm text-text-primary font-mono group-hover:text-green-primary transition">
            {prevPost.title}
          </span>
        </a>
      ) : (
        <div />
      )}
      {nextPost ? (
        <a href={`/blog/${nextPost.id}`} class="flex flex-col gap-1 items-end text-right group">
          <span class="text-xs text-text-muted font-mono">next post &gt;</span>
          <span class="text-sm text-text-primary font-mono group-hover:text-green-primary transition">
            {nextPost.title}
          </span>
        </a>
      ) : (
        <div />
      )}
    </div>
  </div>
)}
