---
import { Icon } from 'astro-icon/components';

interface Props {
  label: string;
  icon?: string;
  href?: string;
}

const { label, icon = 'lucide:terminal', href } = Astro.props;
const Tag = href ? 'a' : 'button';
---

<Tag
  href={href}
  class="inline-flex items-center justify-center gap-2 rounded bg-green-primary px-6 py-3 text-[13px] font-medium text-bg-page font-mono cursor-pointer hover:brightness-110 active:scale-95 transition-all duration-200 w-full sm:w-auto"
>
  <Icon name={icon} class="size-4" />
  <span>{label}</span>
</Tag>
