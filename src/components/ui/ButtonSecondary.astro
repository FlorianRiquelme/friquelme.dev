---
import { Icon } from 'astro-icon/components';

interface Props {
  label: string;
  icon?: string;
  href?: string;
}

const { label, icon = 'lucide:github', href } = Astro.props;
const Tag = href ? 'a' : 'button';
---

<Tag
  href={href}
  class="inline-flex items-center justify-center gap-2 rounded bg-bg-surface border border-border-primary px-6 py-3 text-[13px] text-text-tertiary font-mono cursor-pointer hover:border-border-secondary transition w-full sm:w-auto"
>
  <Icon name={icon} class="size-4" />
  <span>{label}</span>
</Tag>
