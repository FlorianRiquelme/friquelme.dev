---
import { Icon } from 'astro-icon/components';

interface Props {
  label: string;
  icon?: string;
  href?: string;
}

const { label, icon = 'lucide:arrow-right', href } = Astro.props;
const Tag = href ? 'a' : 'button';
---

<Tag
  href={href}
  class="inline-flex items-center gap-2 rounded px-6 py-3 text-[13px] text-text-muted font-mono cursor-pointer hover:text-text-tertiary transition"
>
  <Icon name={icon} class="size-4" />
  <span>{label}</span>
</Tag>
