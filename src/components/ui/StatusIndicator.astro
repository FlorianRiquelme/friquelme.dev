---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="flex items-center gap-2">
  <span class="relative inline-flex size-2">
    <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-primary opacity-75"></span>
    <span class="relative inline-flex size-2 rounded-full bg-green-primary"></span>
  </span>
  <span class="text-[11px] text-green-primary font-mono">{text}</span>
</div>
