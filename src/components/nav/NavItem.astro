---
interface Props {
  label: string;
  href: string;
  active?: boolean;
}

const { label, href, active = false } = Astro.props;
---

<a
  href={href}
  class:list={[
    'inline-flex items-center gap-2 rounded px-3 py-2.5 text-[13px] font-mono transition',
    active
      ? 'bg-bg-input text-green-primary font-medium'
      : 'text-text-tertiary hover:text-text-secondary',
  ]}
>
  <span class:list={[active ? 'text-green-primary' : 'text-text-muted']}>
    {active ? '>' : '\u00A0'}
  </span>
  <span>{label}</span>
</a>
