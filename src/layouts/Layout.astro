---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Portfolio', description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{title}</title>
  </head>
  <body class="bg-bg-page text-text-primary font-mono antialiased">
    <slot />
    <script>
      const reduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      function animateSkillBars(parent: HTMLElement) {
        parent.querySelectorAll<HTMLElement>('[data-animate-skill]').forEach((el) => {
          el.style.width = el.dataset.targetWidth + '%';
        });
      }

      if (reduced) {
        document.querySelectorAll<HTMLElement>('[data-animate]').forEach((el) => {
          el.classList.add('is-visible');
          animateSkillBars(el);
        });
      } else {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (!entry.isIntersecting) return;
              const el = entry.target as HTMLElement;
              el.classList.add('is-visible');
              animateSkillBars(el);
              observer.unobserve(el);
            });
          },
          { threshold: 0.15, rootMargin: '-50px' }
        );

        document.querySelectorAll('[data-animate]').forEach((el) => {
          observer.observe(el);
        });
      }
    </script>
  </body>
</html>
